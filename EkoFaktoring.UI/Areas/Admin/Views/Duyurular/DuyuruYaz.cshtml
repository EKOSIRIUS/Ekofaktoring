    <label class="form-label">Başlık</label>
    <input type="text" class="form-control" name="example-text-input" placeholder="Input placeholder">
</div>

<div class="mb-3">
    <label class="form-label">Metin</label>
    <textarea style="" name="text">

    </textarea>
</div>



