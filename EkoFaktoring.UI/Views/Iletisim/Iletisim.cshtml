}

<section id="contact" class="main-contact-form-area pdb100">
    <div class="container">
        <div class="row">

            <div class="col-xl-6">
                <div class="contact-info-box-style1">
                    <div class="box1"></div>
                    <div class="title">
                        <h2>İletişim Bilgileri</h2>
                        <p>Görüş ve önerileriniz için bizimle iletişime geçiniz</p>
                    </div>

                    <ul class="contact-info-1">
                        <li>
                            <div class="icon">
                                <span class="icon-map"></span>
                            </div>
                            <div class="text">
                                <p>Genel Müdürlük</p>
                                <h3>
                                    Maslak Mah. Meydan Sok. Veko Giz Plaza No:3 P.K.34398 <br>
                                    Maslak - Istanbul
                                </h3>
                            </div>
                        </li>
                        <li>
                            <div class="icon">
                                <span class="icon-clock"></span>
                            </div>
                            <div class="text">
                                <p>Mesai Saatlerimiz</p>
                                <h3>Pazartesi - Cuma: 9:00 / 18:00</h3>
                            </div>
                        </li>
                        <li>
                            <div class="icon">
                                <span class="icon-phone"></span>
                            </div>
                            <div class="text">
                                <p>Front Desk</p>
                                <h3><a href="tel:02123292100">(0212) 329 21 00</a></h3>
                                <h3><a href="mailto:info@ekofactoring.com">info@ekofactoring.com</a></h3>
                            </div>
                        </li>
                    </ul>

                    <div class="bottom-box">
                        <div class="footer-social-link-style1">
                            <ul class="clearfix">
                                <li>
                                    <a href="#">
                                        <i class="fab fa-youtube"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-xl-6">
                <div class="contact-form" style="background-color: #f5f8f7;">
                    <form method="post" asp-controller="Iletisim" asp-action="Index">

                        <div class="form-group">
                            <label asp-for="IsimSoyisim">İsim Soyisim</label>
                            <div class="input-box">
                                <input asp-for="IsimSoyisim">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <div class="input-box">
                                <input asp-for="Email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Telefon">Telefon Numarası</label>
                            <div class="input-box">
                                <input asp-for="Telefon">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Icerik">İçerik</label>
                            <div class="input-box">
                                <textarea asp-for="Icerik" style="height:175px;"></textarea>
                            </div>
                        </div>

                        <div class="button-box">
                            <button class="btn-one" type="submit" data-loading-text="Lütfen Bekleyiniz..." @(buttonMessage == "Gönder" ? "" : "disabled")>
                                <span class="txt">
                                    @buttonMessage
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

